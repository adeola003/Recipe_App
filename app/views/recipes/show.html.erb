<h2><%= @recipe.name %></h2>
<%= button_to toggle_public_recipe_path(@recipe), method: :patch, class: "toggle-public-btn" do %>
  <%= @recipe.public? ? "Make Private" : "Make Public" %>
<% end %>
<p><strong>Description:</strong> <%= @recipe.description %></p>
<p><strong>Prep Time:</strong> <%= @recipe.prep_time %> minutes</p>
<p><strong>Cooking Time:</strong> <%= @recipe.cooking_time %> minutes</p>
<p><strong>Public:</strong> <%= @recipe.public ? "Yes" : "No" %></p>

<%= link_to "Back to Recipes", recipes_path %>

<% if current_user == @recipe.user %>
  <h3>Add New Food Item</h3>
  <%= form_with(model: @recipe_food, url: recipe_foods_path, local: true) do |form| %>
    <div class="field">
      <%= form.label :food_id, "Food Item" %>
      <%= form.collection_select(:food_id, Food.where(user_id: current_user), :id, :name) %>
    </div>

    <div class="field">
      <%= form.label :quantity %>
      <%= form.number_field :quantity %>
    </div>

    <div class="actions">
      <%= form.submit "Add Food Item" %>
    </div>
  <% end %>
<% end %>

