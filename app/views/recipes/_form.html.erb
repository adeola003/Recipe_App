<%= form_with(model: @recipe, url: recipes_path, local: true, class: "recipe-form") do |form| %>
  <div class="form-field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-row">
    <div class="form-field">
      <%= form.label :cooking_time %>
      <%= form.number_field :cooking_time, class: "form-control" %>
    </div>

    <div class="form-field">
      <%= form.label :prep_time %>
      <%= form.number_field :prep_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-check">
    <%= form.label :public, class: "form-check-label" %>
    <%= form.check_box :public, class: "form-check-input" %>
  </div>

  <div class="actions mt-3">
    <%= form.submit "Save Recipe", class: "submit-btn" %>
  </div>
<% end %>
