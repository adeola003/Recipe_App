<%= form_with(model: @recipe, url: recipes_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %><br />
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %><br />
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :cooking_time %><br />
    <%= form.number_field :cooking_time %>
  </div>

  <div class="field">
    <%= form.label :prep_time %><br />
    <%= form.number_field :prep_time %>
  </div>

  <div class="field">
    <%= form.label :public %><br />
    <%= form.check_box :public %>
  </div>

  <div class="actions">
    <%= form.submit "Save Recipe" %>
  </div>
<% end %>
